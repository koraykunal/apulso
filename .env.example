# ===========================================
# DJANGO CORE SETTINGS
# ===========================================
# CRITICAL: Generate a new secret key for production!
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts (your domain names)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
DB_NAME=apulso_db
DB_USER=apulso_user
DB_PASSWORD=your_strong_database_password
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# CORS & SECURITY
# ===========================================
# Frontend domains allowed to access the API
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CSRF trusted origins (same as frontend domains)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# FAL AI for Try-On Feature
FAL_KEY=your_fal_ai_api_key

# N8N Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your_n8n_api_key

# ===========================================
# REDIS (for Celery async tasks)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# PAYMENT PROVIDERS (Optional - currently not in use)
# ===========================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...

# Turkish Payment Providers
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://api.iyzipay.com

PAYTR_MERCHANT_ID=your_paytr_merchant_id
PAYTR_MERCHANT_KEY=your_paytr_merchant_key
PAYTR_MERCHANT_SALT=your_paytr_merchant_salt

# ===========================================
# FILE STORAGE (AWS S3 - Optional)
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=eu-west-1