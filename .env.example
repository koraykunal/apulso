# ===========================================
# DJANGO CORE SETTINGS
# ===========================================
# CRITICAL: Generate a new secret key for production!
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts (your domain names and IPs)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com,1.2.3.4

# Frontend URL
FRONTEND_URL=https://www.yourdomain.com

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
DB_NAME=apulso_production
DB_USER=apulso_user
DB_PASSWORD=your_strong_database_password
DB_HOST=db
DB_PORT=5432

# ===========================================
# CORS & SECURITY
# ===========================================
# Frontend domains allowed to access the API
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CSRF trusted origins (same as frontend domains)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# EMAIL CONFIGURATION (AWS SES)
# ===========================================
USE_SES=True
AWS_SES_REGION_NAME=eu-west-1
AWS_SES_ACCESS_KEY_ID=your_aws_ses_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_ses_secret_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# FAL AI for Try-On Feature
FAL_KEY=your_fal_ai_api_key

# ===========================================
# REDIS (for Celery async tasks)
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# FILE STORAGE (AWS S3)
# ===========================================
USE_S3=True
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=eu-west-1
